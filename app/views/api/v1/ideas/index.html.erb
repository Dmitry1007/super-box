<h3>Idea Box</h3>

<div class="row">
  <div class="medium-3 columns">
    <%= form_for(:idea, url: api_v1_ideas_path) do |f| %>
      <%= f.email_field :title %>
      <%= f.password_field :body %>

      <%= f.submit "Save" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="medium-9 columns">
   <h4>Ideas</h4>

   <% @ideas.each do |idea| %>
     <ul class="accordion" data-accordion>
        <li class="accordion-navigation">
          <a href="#idea<%= idea.id %>"><%= idea.title %>

          <div class="right">
            <i class="fa fa-thumbs-o-up"></i>
            <i class="fa fa-thumbs-o-down"></i>
            <span class="round radius label"><%= idea.quality %></span>
          </div>

          </a>
          <div id="idea<%= idea.id %>" class="content">
            <%= idea.body %>
            <span class="alert round radius label">Delete</span>
            <span class="round radius label">Edit</span>
          </div>
        </li>
     </ul>
   <% end %>

  </div>
</div>
