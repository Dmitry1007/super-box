<h3>Idea Box</h3>

<div class="row">
  <div class="medium-3 columns">
    <%= form_for(:idea, url: api_v1_ideas_path) do |f| %>
      <%= f.text_field :title %>
      <%= f.text_field :body %>

      <%= f.submit "Save", id: "create-idea" %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="medium-9 columns ideas-list">
   <h4>Ideas</h4>

  </div>
</div>
